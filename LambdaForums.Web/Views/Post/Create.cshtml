@model  LambdaForums.Web.Models.Post.NewPostModel

    <div class="container body-content">
        <div class="row sectionHeader">
            <div class="sectionHeading noBorder">
                New Post | @Model.ForumName
                <div class="forumLogo" style="background-image: url(@Model.ForumImageUrl); background-size:100%"></div>
                <span id="headingBtn"><a asp-controller="Forum" asp-action="Topic" asp-route-id="@Model.ForumId" class="btn btn-back">Back to @Model.ForumName</a></span>
            </div>
        </div>
        @if (!Context.User.Identity.IsAuthenticated)
        {
            <div class="row">
                <div id="forumIndexContent">
                    <div class="register">You must be a <a asp-controller="Account" asp-action="Register">registered member</a> to create a new post.</div>
                </div>
            </div>
        }
        @if (Context.User.Identity.IsAuthenticated)
        {

            <div class="row">
                <div class="createPostSection">
                    <div class="authorBlock">
                        You're submitting this post as <span class="authorBlockName">@Model.AuthorName</span>
                    </div>
                    <form asp-action="AddPost" method="post" id="addPostForm">
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <span asp-validation-for="Title"></span>
                            <input asp-for="Title" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Content"></label>
                            <span asp-validation-for="Content"></span>
                            <textarea asp-for="Content" class="form-control"></textarea>
                        </div>
                        <button type="submit" id="submitPostBtn" class="btn btn-submitPost">
                            Submit Post
                        </button>
                        <input asp-for="ForumId" type="hidden" />
                    </form>
                </div>
            </div>
        }
    </div>